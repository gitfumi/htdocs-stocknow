											|<option value="サイトに関する質問" selected="<?php if($type=='サイトに関する質問'){echo 'selected';}?>">サイトに関する質問</option>
											|<option value="記事に関する間違い指摘・クレーム" selected="<?php if($type=='記事に関する間違い指摘・クレーム'){echo 'selected';}?>">記事に関する間違い指摘・クレーム</option>
											|<option value="広告の掲載依頼" selected="<?php if($type=='広告の掲載依頼'){echo 'selected';}?>">広告の掲載依頼</option>
											|<option value="その他" selected="<?php if($type=='その他'){echo 'selected';}?>">その他</option>
						div.fieldItem.js-formItem
							p.itemHead.is-require #[span.js-formItemLabel お問い合わせの内容]
							div.itemCont.js-formItemBody
								div.itemGroup
									textarea.js-validatejs-required(name="inquiries" cols="30" rows="10" maxlength="1000") <?php echo hscBr($inquiries);?>
