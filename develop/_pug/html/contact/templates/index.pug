				form(action="confirm.php" method="post")
					div.formField
						div.fieldItem.js-formItem
							p.itemHead.is-require #[span.js-formItemLabel お名前]
							div.itemCont.js-formItemBody
								p.itemGroup
									|<input class="js-validate js-required js-symbol is-error" name="name" type="text" autocomplete="name" placeholder="例：ストック太郎" maxlength="100" value="<?php echo hsc($name);?>">
						div.fieldItem.js-formItem
							p.itemHead.is-require #[span.js-formItemLabel メールアドレス]
							div.itemCont.js-formItemBody
								p.itemGroup
									|<input class="js-validate js-required js-email js-emailCheck js-alphabet" name="email" type="text" autocomplete="email" placeholder="例：stocknow@stocknow.co.jp" maxlength="100" value="<?php echo hsc($email);?>">
								p.itemGroup ※半角英数字でご入力ください
