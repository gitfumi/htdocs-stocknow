extends /_pug/_inc/_layout

//-
	---------------------------------------------------------
	ページ固有の変数を定義
	---------------------------------------------------------
append setVar
	- layout = 'entry'
	- pageUrl = '/gourmet/crisp.html'
	- dirArray = createDirArray(pageUrl)
	- bodyAttributes.id = 'p-entry'
	- bodyAttributes.class = 'p-crisp.g-gourmet'

//-
	---------------------------------------------------------
	ページ固有のCSSを読み込み
	---------------------------------------------------------
append css
	link(rel="stylesheet" href="/css/p_entry.css")

//-
	---------------------------------------------------------
	コンテンツ
	---------------------------------------------------------
block main

	article.main_inner

		header.entry_header
			div.mainvisual
				p.mainvisual_pic: img(src="/gourmet/img/pic_crisp_01.jpg" alt="")
				p.mainvisual_date 2019.05.08
				h1.mainvisual_ttl: span 一つひとつ手づくりで提供するカスタムサラダ専門。CRISP SALAD WORKS(クリスプ・サラダワークス)
			ul.c-tag_list
				li: a(href="/") #[span タグ1]
				li: a(href="/") #[span タグあああああ]


		//#include virtual="/_inc/advertise780.html"

		div.entry_content
			div.mokuji
				p.m-titleType03 目次
				ul.mokuji_list
					li: a(href="#anchor01") YONA YONA BEER WORKS
					li: a(href="#anchor02") ふわトロ食感「バスクチーズケーキ」。BELTZ【ベルツ】チーズケーキ専門店
					li: a(href="#anchor03") 直接レシピを伝授された日本人パティシエールが焼くバスクチーズケーキ。GAZTA【ガスタ】

			section.entry_section#anchor01
				h2.m-titleType02 YONA YONA BEER WORKS
				div.entry_pic.m-bySide.is-2block
					div: img(src="/gourmet/img/pic_basquecheesecake_sub01.jpg" alt="")
					div: img(src="/gourmet/img/pic_basquecheesecake_sub02.jpg" alt="")
				p.entry_txt 「YONA YONA BEER WORKS」はヤッホーブルーイングの直営店。ヤッホーブルーイングはクラフトビール「よなよなエール」をはじめ「インドの青鬼」「水曜日のネコ」「僕ビール、君ビール。」「軽井沢高原ビール」などを製造・販売しているビール製造メーカーです。<br>ここで味わえるのは、長野県佐久市の醸造所から直送された新鮮なビール。最高級ホップの鮮やかな香りと軽い甘さが特徴の「よなよなエール」、驚愕の苦みで飲む人を虜にする「インドの青鬼」など、熟練のビール職人が精魂込めて造り上げたクラフトビールを楽しめます。<br>7種類のなかから好きなビールを3種類選べる「飲み比べセット」は1280円。窯で焼き上げるローストチキンやオリジナルソーセージなど料理も本格的。5400円で4種類のビール飲み放題のプランもあり。
				section.entry_shop
					h3.m-titleType04.shop_head #[span YONA YONA BEER WORKS] 店舗情報
					div.m-bySide.is-3block.shop_list.js-shop_list
						section
							h4.shop_name.js-shop_name 赤坂店
							p.shop_pin: a(target="_blank" href="https://goo.gl/maps/V5CERm3DDhiD5rNk9") 東京都千代田区永田町2-14-3 東急プラザ赤坂2F
							p.shop_time 11:30～15:00、16:00～23:00<br>※土日祝　11:30～23:00<br>※L.O.は30分前
						section
							h4.shop_name.js-shop_name 青山店
							p.shop_pin: a(target="_blank" href="https://goo.gl/maps/ib9khhqU4W4moq8R7") 東京都港区南青山3-18-20 松本ビル B1F
							p.shop_time 16:00〜23:30<br>※土日祝　11:30〜23:00<br>※L.O.は60分前
						section
							h4.shop_name.js-shop_name 神田店
							p.shop_pin: a(target="_blank" href="https://goo.gl/maps/DguC9d3LLoXnCuBt5") 東京都千代田区神田須田町1-24-6 ACN神田須田町ビル1F
							p.shop_time 16:00～23:30<br>※土日祝　11:30～23:00<br>※L.O.は60分前
						

			section.entry_section#anchor02
				h2.m-titleType02 ふわトロ食感「バスクチーズケーキ」。BELTZ【ベルツ】チーズケーキ専門店
				div.entry_pic.m-bySide.is-2block
					div: img(src="/gourmet/img/pic_basquecheesecake_sub03.jpg" alt="")
					div: img(src="/gourmet/img/pic_basquecheesecake_sub04.jpg" alt="")
				p.entry_txt BELTZ【ベルツ】のチーズケーキは外側のしっかり感と、内部のしっとり感の対比が秀逸。チーズの味わいも濃厚でとろける美味しさです。スフレとは違うフワフワ感が特徴です！
