extends /_pug/_inc/_layout

//-
	---------------------------------------------------------
	ページ固有の変数を定義
	---------------------------------------------------------
append setVar
	- layout = 'entry'
	- pageUrl = '/gourmet/pressbuttersand.html'
	- dirArray = createDirArray(pageUrl)
	- bodyAttributes.id = 'p-entry'
	- bodyAttributes.class = 'p-pressbuttersand.g-gourmet'

//-
	---------------------------------------------------------
	ページ固有のCSSを読み込み
	---------------------------------------------------------
append css
	link(rel="stylesheet" href="/css/p_entry.css")

//-
	---------------------------------------------------------
	コンテンツ
	---------------------------------------------------------
block main

	nav.m-breadcrumbs
		ol.m-breadcrumbs_list
			li: a(href="/") HOME
			li あの「BAKE」が手掛けたバターサンド！『PRESS BUTTER SAND（プレスバターサンド）』

	article.main_inner

		header.entry_header
			div.mainvisual
				p.mainvisual_pic: img(src="/gourmet/img/pic_pressbuttersand_01.jpg" alt="")
				p.mainvisual_date 2019.03.04
				h1.mainvisual_ttl: span あの「BAKE」が手掛けたバターサンド！<br>『PRESS BUTTER SAND（プレスバターサンド）』
			ul.c-tag_list
				li: a(href="/") #[span タグ1]
				li: a(href="/") #[span タグあああああ]


		//#include virtual="/_inc/advertise780.html"

		div.entry_content
			div.mokuji
				p.m-titleType03 目次
				ul.mokuji_list
					li: a(href="#anchor01") 『PRESS BUTTER SAND（プレスバターサンド）』のこだわり。
					li: a(href="#anchor02") ブランドのコンセプトやパッケージにも注目！！
					li: a(href="#anchor03") 『PRESS BUTTER SAND（プレスバターサンド）』の店舗一覧

			section.entry_section#anchor01
				h2.m-titleType02 「PRESS BUTTER SAND（プレスバターサンド）」のこだわり。
				div.entry_pic.m-bySide.is-2block
					div: img(src="/gourmet/img/pic_pressbuttersand_sub01.jpg" alt="")
					div: img(src="/gourmet/img/pic_pressbuttersand_sub02.jpg" alt="")
				p.entry_txt 北海道産のフレッシュな「バタークリーム」と「バターキャラメル」の2層構造のクリームを「はさみ焼き製法」で作られたクッキーではさみました。クッキーは鉄板で1枚1枚丁寧に焼き上げ、油が適度に抜けて食感がよくなるように工夫されています。

			section.entry_section#anchor02
				h2.m-titleType02 ブランドのコンセプトやパッケージにも注目！！
				div.entry_pic.m-bySide.is-2block
					div: img(src="/gourmet/img/pic_pressbuttersand_sub03.jpg" alt="")
					div: img(src="/gourmet/img/pic_pressbuttersand_sub04.jpg" alt="")
				p.entry_txt ブランドのコンセプトやデザインは、鉄・プレス・熱といったキーワードから、工業的な要素をモチーフにしているそうです。そのため、ブランドカラーが鉄っぽいグレーだったり、工場風にお店では荷物を積み上げていくように箱が並べてあります。パッケージは溶鉄を思わせるビビッドオレンジにグレーを合わせてスタイリッシュな印象に。

			section.entry_section#anchor03
				h2.m-titleType02 「PRESS BUTTER SAND（プレスバターサンド）」の店舗一覧
				section.entry_shop
					div.m-bySide.is-3block.shop_list
