extends /_pug/_inc/_layout

//-
	---------------------------------------------------------
	ページ固有の変数を定義
	---------------------------------------------------------
append setVar
	- layout = 'entry'
	- pageUrl = '/gourmet/sparklingwine.html'
	- dirArray = createDirArray(pageUrl)
	- bodyAttributes.id = 'p-entry'
	- bodyAttributes.class = 'p-sparklingwine.g-gourmet'

//-
	---------------------------------------------------------
	ページ固有のCSSを読み込み
	---------------------------------------------------------
append css
	link(rel="stylesheet" href="/css/p_entry.css")

//-
	---------------------------------------------------------
	コンテンツ
	---------------------------------------------------------
block main

	article.main_inner

		header.entry_header
			div.mainvisual
				p.mainvisual_pic: img(src="/gourmet/img/pic_sparklingwine_01.jpg" alt="Amy's Bakeshop")
				p.mainvisual_date 2019.04.03
				h1.mainvisual_ttl: span せっかくならちょっと素敵なお酒を贈りたい！<br>誕生日パーティーの乾杯におすすめのスパークリングワイン3選
			ul.c-tag_list
				li: a(href="/") #[span タグ1]
				li: a(href="/") #[span タグあああああ]


		//#include virtual="/_inc/advertise780.html"

		div.entry_content
			div.mokuji
				p.m-titleType03 目次
				ul.mokuji_list
					li: a(href="#anchor01") スペイン生まれのキラキラ輝くスパークリングワイン『マバム (MAVAM) 』
					li: a(href="#anchor02") バラが香りが特徴のマリー・アントワネットのお酒！『NINA'S（ニナス）』のスパークリングワイン
					li: a(href="#anchor03") お菓子の「書籍」と「お菓子作りスクール」

			section.entry_section#anchor01
				h2.m-titleType02 スペイン生まれのキラキラ輝くスパークリングワイン『マバム (MAVAM) 』
				div.entry_pic.m-bySide.is-2block
					div: img(src="/gourmet/img/pic_asparklingwine_sub01.jpg" alt="スパークリングワイン『マバム (MAVAM) 』")
					div: img(src="/gourmet/img/pic_asparklingwine_sub02.jpg" alt="スパークリングワイン『マバム (MAVAM) 』")
				p.entry_txt ボトルを回すと輝き出すラメが輝きだす世界初のスパークリングワイン。誕生日パーティに持って行ったときには注目を集めること間違いなしです！スイートなイチゴのフレーバーや、爽やかなグリーンアップルなど、色々楽しめます！アルコール度数が低い甘口で、お酒の弱い方でも楽しめるのもうれしいです！
				div.m-bySide.is-2block
					section
						p.entry_pic: img(src="/gourmet/img/pic_asparklingwine_sub01.jpg" alt="マフィン")
						h3.sparklingwine_txt #[span #[em Muffins] [マフィン]]<br>ベリー＆ベリー、レモン＆カスタード、バナナ＆チョコチップ、ブルーチーズ＆フィグ＆ソルト、オレンジ＆アーモンド、バター＆ソルトなど。
						p.m-btn: a( target="_blank" href="") #[span オンラインショップはこちら]

			section.entry_section#anchor02
				h2.m-titleType02 バラが香りが特徴のマリー・アントワネットのお酒！『NINA'S（ニナス）』のスパークリングワイン
				div.entry_pic.m-bySide.is-2block
					div: img(src="/gourmet/img/pic_asparklingwine_sub03.jpg" alt="『NINA'S（ニナス）』のスパークリングワイン")
					div: img(src="/gourmet/img/pic_asparklingwine_sub04.jpg" alt="『NINA'S（ニナス）』のスパークリングワイン")
				p.entry_txt あのヴェルサイユ宮殿に今でも残っている菜園「王の菜園」で一つひとつ手摘みされるバラとリンゴで作られているロゼのスパークリングワイン。ふわっと広がるバラの香りはなんともエレガント。お酒好きの女性の誕生日をお祝いするのにぴったりです。
				div.m-bySide.is-2block
					section
						p.entry_pic: img(src="/gourmet/img/pic_amysbakeshop_sub03.jpg" alt="マフィン")
						h3.sparklingwine_txt #[span #[em Muffins] [マフィン]]<br>ベリー＆ベリー、レモン＆カスタード、バナナ＆チョコチップ、ブルーチーズ＆フィグ＆ソルト、オレンジ＆アーモンド、バター＆ソルトなど。
						p.m-btn: a( target="_blank" href="") #[span オンラインショップはこちら]



